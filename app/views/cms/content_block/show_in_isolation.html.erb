<% use_page_title "View #{content_type.display_name}" %>
<%= render layout: 'page_title' do %>
  <div class="right">
    <div class="btn-group ">
      <%= link_to 'Back to list', url_for(engine_aware_path(@block.class)) , class: 'btn btn-primary btn-small' %>
    </div>
    <div class="btn-group">
      <%= link_to 'Edit', edit_engine_aware_path(@block), class: 'btn btn-primary btn-small' %>
      <% if @block.class.respond_to?(:amoeba) && @block.class.amoeba.enabled %>
        <%= link_to 'Clone', polymorphic_path(build_path_for(@block), { action: :clone_record }), class: 'btn btn-primary btn-small' %>
      <% end %>
    </div>
  </div>
<% end %>
<% content_for :sidebar, render('sidebar') %>
<%= render layout: 'main_with_sidebar' do %>
  <% if @block.respond_to?(:deleted) && @block.deleted %>
    <p>This <%= @block.class.name %> has been deleted.</p>
  <% end %>
  <% if @block.class.renderable? %>
    <%= render_connectable(@block) %>
  <% end %>
<% end %>


